package exers100visto2bim;

import java.util.Scanner;

public class areaCirculo {
	Scanner in = new Scanner(System.in);
	
	public void Diametro() {
		
		double pi = 3.14;
		double raio;
		double area;
		
		System.out.println("Digite o valor do raio do círculo do qual deseja saber a área.");
		raio = in.nextDouble();
		
		area = pi * (raio*raio);
		
		System.out.println("A area do circulo é "+area);
		
	}
	
	public void Diametro2 (double pi, double raio, double area) {
		
		    pi = 3.14;
	
			System.out.println("Digite o valor do raio do círculo do qual deseja saber a área.");
			raio = in.nextDouble();
			
			area = pi * (raio*raio);
			
			System.out.println("A area do circulo é "+area);
			
		}
	
	
	public double Diametro3 () {
		double pi = 3.14;
		double raio;
		double area;
	    
	
		System.out.println("Digite o valor do raio do círculo do qual deseja saber a área.");
		raio = in.nextDouble();
		
		area = pi * (raio*raio);
		
		System.out.println("A area do circulo é "+area);
		return area;
		
	}
}
