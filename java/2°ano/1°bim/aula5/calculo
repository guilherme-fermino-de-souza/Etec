package aula1;
public class Calculo {			//processamento e retorno DOS dados
		
	public boolean Calc(double trian) {
		if(trian!=180) {
			System.out.println("A junção desses ângulos não compõe um triângulo");
			return false;
		} else {
			System.out.println("A junção desses ângulos compõe um triângulo");
			return true;
		}
	}	
}		
		
