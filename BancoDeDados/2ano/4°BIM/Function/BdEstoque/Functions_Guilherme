-- 1 Criar uma função que retorne o dia de semana da venda (no formato segunda, terça, etc) ao lado do código da venda, valor total da venda e sua data
CREATE FUNCTION fc_DiaVenda(@diaVenda DATE) RETURNS VARCHAR(40) AS 
	BEGIN
	DECLARE @Dia INT
	SET @Dia = DATEPART(dw, @DiaVenda)

	IF @Dia = 1 BEGIN
		SET @diaVenda = 'Domigo'
	END
	IF @Dia = 2 BEGIN
		SET @diaVenda = 'Segunda'
	END
	IF @Dia = 3 BEGIN
		SET @diaVenda = 'Terça'
	END
	IF @Dia = 4 BEGIN
		SET @diaVenda = 'Quarta'
	END
	IF @Dia = 5 BEGIN
		SET @diaVenda = 'Quinta'
	END
	IF @Dia = 6 BEGIN
		SET @diaVenda = 'Sexta'
	END
		IF @Dia = 7 BEGIN
		SET @diaVenda = 'Sábado'
	END

	RETURN @diaVenda
END

